@model IEnumerable<QLHangHoa.Models.HangHoa>

@{
    ViewBag.Title = "GetHangHoaTheoGia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hàng hóa theo giá</h2>

@using (Html.BeginForm())
{
    <p>
        từ: @Html.TextBox("X")
    </p>
    <br />
    <p>
        đến: @Html.TextBox("Y")
    </p>
    <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gianhap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Giaban)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Theloai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soluonghientai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gianhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Giaban)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Theloai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluonghientai)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaHang }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaHang }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaHang })
            </td>
        </tr>
    }

</table>
