@model IEnumerable<QLHangHoa.Models.HangHoa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Trang chủ</h2>
<h3>Chức năng: </h3>
@Html.ActionLink("Tìm hàng hóa theo tên", "GetHangHoaByName", null, new
{
    @class = "btn btn-primary"
})
@Html.ActionLink("Tìm hàng hóa theo loại", "GetHangHoaByLoai", null, new
{
    @class = "btn btn-primary"
})
@Html.ActionLink("Tìm hàng hóa sắp hết", "GetHangHoaSapHet", null, new
{
    @class = "btn btn-primary"
})
@Html.ActionLink("Tìm hàng hóa theo giá", "GetHangHoaTheoGia", null, new
{
    @class = "btn btn-primary"
})

<p>
    @Html.ActionLink("Thêm mới", "Create", null, new
{
    @class = "btn btn-primary"
})
</p>
<h5 class="text-danger">@ViewBag.ThongBao</h5>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gianhap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Giaban)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Theloai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soluonghientai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gianhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Giaban)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Theloai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluonghientai)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.MaHang }, new
           {
               @class = "btn btn-secondary"
           })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaHang }, new
           {
               @class = "btn btn-success"
           })
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaHang }, new
           {
               @class = "btn btn-danger"
           })
            </td>
        </tr>
    }

</table>
